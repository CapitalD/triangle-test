    .row
      .col-xs-12
        h1= title
        
    .row
      .col-xs-10.col-xs-offset-1
        .well.well-lg
          h4= pluralize('test',active_tests, true)
            |  in progress
            
    .row
      .col-xs-5.col-xs-offset-1
        a.btn.btn-lg.btn-info.btn-block.option-button(href='/tests', role='button', name='tests') Tests
