extends layout

block content

  .container-fluid
  
    form(action="/evaluations/new", method="post")
      .row
        .col-xs-12
          h1= title
        
      .row
        .col-xs-5.col-xs-offset-1
        
          .form-group.text-left
            label(for='date_field') Date
            .input-group.input-group-lg
              input#date_field.form-control(type='text', name='date_field' placeholder='Date', aria-describedby='date_field')
              span.input-group-addon
                span.glyphicon.glyphicon-calendar(aria-hidden='true')
            
        .col-xs-5
          .form-group.text-left
            label(for='time_field') time
            .input-group.input-group-lg
              input#time_field.form-control(type='text', name='time_field' placeholder='Time', aria-describedby='time_field')
              span.input-group-addon 
                span.glyphicon.glyphicon-time(aria-hidden='true')
      
      .row
        .col-xs-10.col-xs-offset-1
        
          .form-group.text-left
            label(for='location') Location
            select#location.form-control.input-lg(name='location')
              each loc in locations
                option(value=loc.id)
                  =loc.name
              
      .row
        .col-sm-3.col-xs-offset-1.col-xs-5
          a.btn.btn-lg.btn-default.btn-block.option-button(href='/tests/', role='button', name='back') Back
        .col-sm-3.col-sm-offset-4.col-xs-5
          button.btn.btn-lg.btn-info.btn-block.option-button(type='submit', name='save-taster') Save

block body_end
  script(type='text/javascript', src='/javascripts/triangle.js')
  script(type='text/javascript')
    | better_button_group("overall_knowledge_field", "btn-success");
    | select_value_to_radio("overall_knowledge_mob_field", "overall_knowledge_field");
