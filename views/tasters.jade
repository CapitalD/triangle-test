extends layout

block content

  .container-fluid
    .row
      .col-xs-12
        h1= title
        
    .row
      .col-xs-6.col-xs-offset-3
        .list-group
          each taster in tasters
            a.list-group-item(href='/tasters/'+taster.id)
              h4.list-group-heading 
                = taster.name
            
    .row
      .col-xs-2.col-xs-offset-1
        a.btn.btn-lg.btn-default.btn-block.option-button(href='/admin', role='button', name='back') Back
      .col-xs-2.col-xs-offset-6
        a.btn.btn-lg.btn-success.btn-block.option-button(href='/tasters/new', role='button', name='add-taster') Add taster
