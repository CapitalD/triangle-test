extends layout

block content

  .container-fluid
    .row
      .col-xs-12
        h1= title
        
    .row
      .col-sm-6.col-sm-offset-3.col-xs-10.col-xs-offset-1
        .panel.panel-info
          .panel-heading Scheduled evaluations
          
          - var today = moment();
    
          ul.list-group.text-left
            each evaluation in test.Evaluations
            
              - var isPast = moment(evaluation.scheduled_start).isBefore(today, 'day');
              li.list-group-item.clearfix
                span.pull-left
                  h4.list-group-header
                    - var formatted_date = moment(evaluation.scheduled_start).format("dddd D MMM YY");
                    span(data-toggle='tooltip', data-placement='top', title=formatted_date)
                      =moment(evaluation.scheduled_start).calendar()
                  p.list-group-item-text Location: 
                    =evaluation.Location.name
                span.pull-right
                  .btn-group.btn-group-lg(role='group')
                    .btn-group.btn-group-lg(role='group')
                      button.btn.btn-lg.btn-default.dropdown-toggle(type='button', data-toggle='dropdown', aria-haspopup='true', aria-expanded='false') Options
                        | &nbsp;
                        span.caret
                      ul.dropdown-menu
                        li
                          a Reschedule
                          a Cancel
                          a Change location
                    if !isPast
                      button.btn.btn-lg.btn-primary(type='button') Start

block body_end
  script(type='text/javascript', src='/javascripts/triangle.js')
  script(type='text/javascript')
    | start_all_tooltips();
