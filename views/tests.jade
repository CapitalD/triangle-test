extends layout

block content

  .container-fluid
    .row
      .col-xs-12
        h1= title
        
    .row
      .col-sm-6.col-sm-offset-3.col-xs-10.col-xs-offset-1
        .list-group
          each test in tests
            a.list-group-item(href='/tests/'+test.id)
              h4.list-group-heading
                = test.name
            
    .row
      .col-sm-3.col-xs-offset-1.col-xs-5
        a.btn.btn-lg.btn-default.btn-block.option-button(href='/admin', role='button', name='back') Back
      .col-sm-3.col-sm-offset-4.col-xs-5
        a.btn.btn-lg.btn-success.btn-block.option-button(href='/tests/new', role='button', name='add-taster') Add test
